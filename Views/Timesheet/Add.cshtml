@model timesheet.ViewModels.AddTimesheetViewModel

<h1>Add Timesheet</h1>

<form asp-controller="Timesheet" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="DayOfTheWeekID"></label>
        <select asp-for="DayOfTheWeekID" asp-items="Model.TimesheetDays"></select>
    </div>

    <input type="submit" value="Add Timesheet" />
</form>