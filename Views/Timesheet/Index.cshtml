@model IList<timesheet.Models.Timesheet>

@if (Model.Count == 0)
{
    <p>No timesheets!</p>
}
else { 
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Day</th>
        </tr>
        @foreach (var sheet in Model)
        {
            <tr>
                <td>@sheet.ID</td>
                <td>@sheet.DayOfTheWeek.Name</td>
            </tr>
        }
    </table> 
}



<p><a asp-controller="Timesheet" asp-action="Add">Add Timesheet</a></p>