@model IList<timesheet.Models.Skill>

@if (Model.Count == 0)
{
    <p>No skills!</p>
}
else { 
    <table class="table">
        <tr>
            <th>Name</th>
        </tr>
        @foreach (var sheet in Model)
        {
            <tr>
                <td>@sheet.Name</td>
            </tr>
        }
    </table> 
}



<p><a asp-controller="Skill" asp-action="Add">Add Skill</a></p>