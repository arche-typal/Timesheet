@model IList<timesheet.Models.Person>

@if (Model.Count == 0)
{ 
    <p>No people!</p>
}

<table class="table">
    <tr>
        <th>Name</th>
    </tr>
    @foreach (var sheet in Model)
    { 
        <tr>
            <td>@sheet.Name</td>
        </tr>
    }
</table>

<p><a asp-controller="Person" asp-action="Add">Add Person</a></p>